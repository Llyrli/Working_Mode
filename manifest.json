{
  "manifest_version": 3,
  "name": "Working Mode",
  "version": "1.3.0",
  "description": "Website categorization, focus reminders, and time tracking.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Working Mode"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/icon-128.png"
  }
}
